{
  "manifest_version": 3,
  "name": "Moodle Course Archiver",
  "version": "1.0",
  "description": "Archive your Moodle courses for offline access with a clean interface.",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "*://*.moodle.org/*",
    "*://*/*moodle*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.moodle.org/*", "*://*/*moodle*/*"],
      "js": ["content/content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}